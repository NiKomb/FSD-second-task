mixin input-text({view, placeholder, name, type} ="")
  case view
    when "arrowLeft"
      .input
        .input__container_view-arrowLeft
          input.input__field_active(placeholder=placeholder, name=name, type=type)
    default
      .input
        .input__container_view-default
          input.input__field_inactive(placeholder="Email" name="default" type=text disabled)
