include /components/input-text/input-text
include /components/button/button


mixin find-room({title}='')
  form.find-room
    h1.find-room__title=title
    .find-room__arrive
      +input-text({
            view:"rangeDate",
            title:"прибытие",
            subtitle:"",
            title1:"выезд",
            subtitle1:"",
            placeholder:"ДД.ММ.ГГГГ"})
    .find-room__guest
      +input-text({title:"гости", subtitle: " ",view:"guest",placeholder: "Сколько гостей",name:"guests",})
    .find-room__button
       +button({theme: "arrow", size:" ", text:"Подобрать номер"})
