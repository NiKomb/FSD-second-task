include /components/input-text/input-text
include /components/button/button

mixin sign-in({ title, auth=true}='')
  form.sign-in
    h1.sign-in__title=title
    fieldset.sign-in__field
      .sign-in__item
        +input-text({title:"",subtitle:"",placeholder:"email", type:"email"})
      .sign-in__item
        +input-text({title:"",subtitle:"", placeholder:"password", type:"password"})
    .sign-in__btn
       +button({theme: "arrow", size:" ", text:"Подобрать номер"})
    fieldset.sign-in__field
      .sign-in__group
        if auth===true
          .sign-in__account Уже есть аккаунт на Toxin
          +button({
          type:"botton",
          form:form,
          size:" ",
          text:"Войти"
          })
        else
          .sign-in__account Нет аккаунта на Toxin
          +button({
          type:"botton",
          form:form,
          size:" ",
          text:"Создать"
          })
