include /components/logo/logo

mixin footer (options={})
  if options.type === 'simple'
    .footer
      .footer__main
        .footer__logo
          +logo({color:true, text: true})
        p.footer__info Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        ul.footer__icons
          li.footer__icon: img.footer__icon-network(src=require('@components/footer/img/twit.svg').default, alt='Twitter')
          li.footer__icon: img.footer__icon-network(src=require('@components/footer/img/faceb.svg').default, alt="Facebook")
          li.footer__icon: img.footer__icon-network(src=require('@components/footer/img/instagram.svg').default, alt="Instagram")
  else if options.type === 'complex'
    .footer
      .footer__main
        .footer__logo
          +logo({color:true, text: true})
