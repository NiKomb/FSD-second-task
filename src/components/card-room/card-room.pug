include /components/button/button
include /components/rating/rating
include /components/card-slider/card-slider
include /components/card-number/card-number


mixin card-room(options)
  -
    const {
      form,
      srcIMG="#",
      dotIMG=1,
      images,
      href="#",
      number=1,
      luxury=false,
      price=0,
      rate=3,
      reviews=0
    } = options;

  form.card-room(name=`${form} № ${number} `)
    fieldset.card-room__field
      +card-slider({dot:true, items:images, href:href, check:dotIMG})
    fieldset.card-room__field
      .card-room__number
        +card-number({
          number:number,
          price:price,
          luxury:luxury,
          isMiddleNumber:true})
      .card-room__group
        +rating({title:"", rate:rate, name: `${form} № ${number} `})
        .card-room__reviews
          b.card-room__reviews-bold| #{reviews}
          |Отзывов
