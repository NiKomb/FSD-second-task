include /components/input-text/input-text
include /components/button/button


mixin room-search({title}='')
  form.room-search
    h1.room-search__title=title

    .room-search__arrive
      +input-text({
            view:"rangeDate",
            title:"прибытие",
            subtitle:"",
            title1:"выезд",
            subtitle1:"",
            placeholder:"ДД.ММ.ГГГГ"})

    .room-search__guest
      +input-text({title:"гости", subtitle: " ",view:"guest",placeholder: "Сколько гостей",name:"guests",})

    .room-search__button
      a.room-search__link(href="./search-room.html")
        +button({type:"button", theme: "arrow", size:" ", text:"Подобрать номер"})
