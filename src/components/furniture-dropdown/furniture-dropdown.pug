include /components/dropdown-menu/dropdown-menu

mixin furniture-dropdown(options={})
  -
    const {
      title="Dropdown",
      subtitle="",
      counts=[0,0,0],
      isOpened=false,
      withActions=true
    }=options

  .furniture-dropdown.js-furniture-dropdown
    +dropdown-menu(
      [
        {name: "bedrooms", text: "Спальни", count: counts[0]},
        {name: "beds", text: "Кровати", count: counts[1]},
        {name: "bathrooms", text: "Ванные комнаты", count: counts[2]},
      ],
      {
        title,
        subtitle,
        isOpened,
        withActions
      }
    )
