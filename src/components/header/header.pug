mixin header({ auth=false, nav=[]})
  header.header
    .header__main
      .header__container
        a.header__logo(href="/form-elements.html" alt="Toxin")
          +logo
        nav.header__nav
          ul.header__menu
            each item in nav
              if item.menu
                li.header__item_menu
                  a.header__link(href="#" alt=item.alt)=item.name
              else
                li.header__item
                  a.header__link(href="#" alt=item.alt)=item.name
          ul.header__user-menu
            if auth === true
              li.header__item
                span.header__user-name
                  a.header__link(href="#")="Юлий Цезарь"
            else
              li.header__item
                +button({text:"Войти"})
              li.header__item
                +button({theme:"fill", text:"Зарегистрироваться"})
