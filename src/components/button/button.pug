//- type= arrow/gradient/line/

mixin button({type, text="Button", href="#"}="")
  case type
    when "arrow"
      a(class="button button_type_gradient button_type_arrow" href=href)= text
        svg.button_type_arrow_svg(width="18", height="18", xmlns="http://www.w3.org/2000/svg")
          path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z")
    when "gradient"
      a(class="button button_type_gradient" href=href)= text
    when "line"
      a(class="button button_type_line" href=href)= text
    default
      a(class="button" href=href)= text
