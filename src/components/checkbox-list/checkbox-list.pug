include /components/checkbox/checkbox
include /components/block-title/block-title

mixin checkbox-list({expand, items, title, subtitle})
  .checkbox-list
    if expand===true&&title
      input.checkbox-list__toggle(type="checkbox" id="checkbox-list-toggle")
      label.checkbox-list__title(for="checkbox-list-toggle")
        +block-title({title:title, subtitle:subtitle})
        .checkbox-list__mark
      ul.checkbox-list__items
        each item in items
          li.checkbox-list__item
            +checkbox(item)
    else
      +block-title({title:title, subtitle:subtitle})
      ul.checkbox-list__items
          each item in items
            li.checkbox-list__item
              +checkbox(item)
